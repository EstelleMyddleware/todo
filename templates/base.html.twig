<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="ToDoList - l'application qui vous simplifie la vie">
        <meta name="author" content="ToDo & Co">
        <title>{% block title %}To Do List app{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body class="h-100">
        <nav class="navbar sticky-top mb-5" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand display-5" href="{{ path('homepage') }}">To Do List app</a>
                    <img src="{{absolute_url(asset('build/img/Logo_OpenClassrooms.png')) }}" alt="OpenClassrooms logo" />
                </div>
            </div>
        </nav>

        <!-- Page Content -->
        <div class="container">
            <div class="row my-5">
                {% if is_granted('ROLE_ADMIN') %}
                <div class="col">
                    <a href="{{ path('user_create') }}" class="btn btn-primary" role="button">Créer un utilisateur</a>
                    <a href="{{ path('user_list') }}" class="btn btn-outline-primary" role="button">Consulter la liste des utilisateurs</a>
                </div>
                {% endif %}
                {% if app.user %}
                    <div class="col text-end">
                        <a href="{{ path('logout') }}" class="btn btn-danger" role="button">Se déconnecter</a>
                    </div>
                {% endif %}
                {% if not app.user and 'login' != app.request.attributes.get('_route') %}
                    <div class="col text-end">
                        <a href="{{ path('login') }}" class="btn btn-success" role="button">Se connecter</a>
                    </div>
                {% endif %}
            </div>

            <div class="row my-5">
                <div class="col-md-12">
                    {% for flash_message in app.session.flashBag.get('success') %}
                        <div class="alert alert-success" role="alert">
                            <strong>Superbe !</strong> {{ flash_message }}
                        </div>
                    {% endfor %}

                    {% for flash_message in app.session.flashBag.get('error') %}
                        <div class="alert alert-danger" role="alert">
                            <strong>Oops !</strong> {{ flash_message }}
                        </div>
                    {% endfor %}

                    {% block header_title %}{% endblock %}
                    {% block header_img %}<img class="slide-image" src="{{ absolute_url(asset('build/img//todolist_homepage.jpg')) }}" alt="todo list">{% endblock %}
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-md-12 my-5">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
        <!-- /.container -->

        <div class="container-fluid">

            <hr>
            <footer>
                <div class="row">
                    <div class="col-lg-12">
                        <p class="text-muted">Copyright &copy; Estelle Gaits | {{ "now"|date("Y") }}</p>
                    </div>
                </div>
            </footer>

        </div>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
