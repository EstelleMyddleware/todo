{% extends 'base.html.twig' %}
   {% block header_title %}
       <div class="row text-center">
           <div class="col-lg-12">
               <h1>Ajouter une tâche</h1>
           </div>
       </div>
   {% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col mb-5 text-center">
                <a href="{{ path('task_list') }}" class="btn btn-success rounded-pill" role="button">Retour à la liste des tâches</a>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-4 card shadow-lg p-5 mb-5 border-0">
            {{ form_start(form, {'action' : path('task_create')}) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-danger text-white rounded-pill" name="add">Ajouter</button>
            {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
